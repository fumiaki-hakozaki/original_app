<%= form_with(model: [@factory,@review],url: factory_reviews_path, local: true, class: "form-horizontal", multipart: true ) do |form| %>
  <% if review.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
        <% review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :content, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_area :content, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :image, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <% if review.image && review.image.url %>
        <%= image_tag(review.image.url, class: "img-responsive") %>
      <% end %>
      <%= form.file_field :image, class: "form-control" %>
      <%= form.hidden_field :image_cache %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "投稿", class: "btn btn-outline-primary" %>
    </div>
  </div>
<% end %>
